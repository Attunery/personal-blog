<h1 class="hero-title" style="text-align:center; margin-bottom:2rem;">My Blog Posts</h1>

<div class="section-card">
{% for post in collections.post | reverse %}
  <article class="blog-post" style="margin-bottom:2.5rem;">
    <h2 style="margin-bottom:0.3rem;"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <div class="date" style="color:#666; font-size:0.95rem; margin-bottom:0.7rem;">{{ post.data.date }}</div>
    <div class="content" style="margin-bottom:0.7rem;">
      {{ post.templateContent | safe }}
    </div>
    <a href="{{ post.url }}" class="read-more">Read more â†’</a>
  </article>
{% endfor %}
</div> 